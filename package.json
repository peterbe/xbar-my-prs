		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.13",
		"@types/bun": "1.3.7",
		"husky": "^9.1.7"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@donedeal0/superdiff": "^4.0.0",
		"commander": "^14.0.2",
		"date-fns": "^4.1.0",
		"octokit": "^5.0.5"
	}
}
