{
	"name": "xbars",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"scripts": {
		"dev:my-prs": "bun run --watch src/my-prs.ts",
		"build:my-prs": "bun build src/my-prs.ts --target=bun --outfile out/my-prs --compile --bytecode",
		"lint": "biome check",
